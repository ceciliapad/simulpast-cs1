<?xml version="1.0" ?>
<config>  
	<!-- Global simulation parameters -->
	<path 	name="path" 	type="string"  value="./data/"/>
	<numSteps 	name="numSteps" 	type="int"  value="3"/>
	<!-- g to KJ -->
	<massToEnergyRate value="20" />
	<!-- 1 KCal = 4.184 KJ, Conversion Rate = 1/4184 -->
	<energyToCaloriesRate value="0.000239006" />
	<!-- Global agent parameters !-->
	<socialRange value="25" />
	<!-- Simulation time scale -->
	<daysPerSeason value="120" />
	<!-- Simulation space scale, in m - cell side -->
	<cellResolution value="31.5"/>
	<!-- Biomass per cell stats -->
	<!-- Total yearly biomass generated by cells in g/m^2, hunting/gathering
	efficiency given as a percentage [0,1] -->
	<cellBiomass type="dune" mean="700" stddev="100" efficiency="0.13" />
	<cellBiomass type="interdune" mean="4000" stddev="500" efficiency="0.23" />
	<!-- Variance for biomass per cell distribution -->
	<biomassDistVariance type="dune" value="500" />
	<biomassDistVariance type="interdune" value="100" />
	<!-- GIS rasters -->
	<soil fileName="./resources/gujarat_400_soil_reclass.tiff" size="400"/>
	<dem fileName="./resources/gujarat_400_dem.tiff" size="400"/>
	<!-- Climatic model parameters -->
	<climateSeed value="432432"/>
	<rainHistoricalDistribution shape="2.628" scale="5278.807" mean="4643.847826087"/>
	<!-- Agents definition -->
	<!-- overlap will be defined as homeRange + 1. It must be < 1/4 of world size -->
	<hunterGatherers 
		num="100" homeRange="30"
		surplusForReproductionThreshold="2" 
		surplusWanted="1"
		numSectors="8" 	/>
	<agroPastoralists num="0" />
</config>

