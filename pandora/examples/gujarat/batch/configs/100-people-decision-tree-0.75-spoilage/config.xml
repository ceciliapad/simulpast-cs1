<?xml version="1.0" ?>
<config>  
	<!-- Global simulation parameters -->
	<path 	name="path" 	type="string"  value="./data/"/>
	<numSteps 	name="numSteps" 	type="int"  value="1440"/>
	<!-- g to KJ -->
	<massToEnergyRate value="20" />
	<!-- 1 KCal = 4.184 KJ, Conversion Rate = 1/4.184 -->
	<energyToCaloriesRate value="0.239006" />
	<!-- Global agent parameters !-->
	<socialRange value="25" />
	<!-- Simulation time scale -->
	<daysPerSeason value="120" />
	<!-- Simulation space scale, in m - cell side -->
	<cellResolution value="31.5"/>
	<!-- Biomass per cell stats -->
	<!-- Total yearly biomass generated by cells in g/m^2, hunting/gathering
	efficiency given as a percentage [0,1] -->
	<cellBiomass type="dune" mean="700" stddev="100" efficiency="0.13" />
	<cellBiomass type="interdune" mean="4000" stddev="500" efficiency="0.23" />
	<!-- Variance for biomass per cell distribution -->
	<biomassDistVariance type="dune" value="500" />
	<biomassDistVariance type="interdune" value="100" />
	<!-- GIS rasters -->
	<soil fileName="./resources/gujarat_400_soil_reclass.tiff" size="400"/>
	<dem fileName="./resources/gujarat_400_dem.tiff" size="400"/>
	<duneMap fileName="./resources/dunes_400_0ha_simple.tiff" size="400"/>
	<!-- Climatic model parameters -->
	<climateSeed value="432432"/>
	<rainHistoricalDistribution shape="2.628" scale="5278.807" mean="4643.847826087"/>
	<!-- Agents definition -->
	<!-- overlap will be defined as homeRange + 1. It must be < 1/4 of world size -->
	<!-- * Walking Speed Hour = # meters traversed per hour -->
	<!-- * Available Forage Time = # hours a day the forage action takes -->
	<!-- * forageTimeCost = how much time (in hours) does it cost the agent to exploit a tile resources -->
	<hunterGatherers 
		num="100" homeRange="30"
		surplusForReproductionThreshold="2" 
		surplusWanted="1"
		surplusSpoilage="0.75"
		numSectors="8"
		walkingSpeedHour="3000"
		forageTimeCost="0.5"
		availableForageTime="4.5"
		demographicsModel="ramirez"
		controllerType="DecisionTree" >
		
		<!-- * width = number of trials before selecting an action, the higher the
		 	the number, the more informed is the action selection and more
			computation time is required -->
		<!-- * explorationBonus = exploration bonus parameter value, the higher it is, UCT
		     will be more likely to explore all possible actions with the same frequency,
		     the lower it is, UCT will devote more time to explore those actions which 
		     look more promising (and possibly missing some opportunities) -->
		<controllerConfig 	type="MDP" 
					nrForageActions="8"
					nrMoveHomeActions="5"
					doNothingIsAllowed="true"
					horizon="7"
					width="100"
					explorationBonus ="10.0"
		/>
		<caloriesTable>
			<entry ageMin="0" ageMax="1" value="625"/>
			<entry ageMin="1" ageMax="2" value="903"/>
			<entry ageMin="2" ageMax="3" value="1093"/>
			<entry ageMin="3" ageMax="4" value="1208"/>
			<entry ageMin="4" ageMax="5" value="1302"/>
			<entry ageMin="5" ageMax="6" value="1397"/>
			<entry ageMin="6" ageMax="7" value="1734"/>
			<entry ageMin="7" ageMax="8" value="1868"/>
			<entry ageMin="8" ageMax="9" value="2025"/>
			<entry ageMin="9" ageMax="10" value="2197"/>
			<entry ageMin="10" ageMax="11" value="2380"/>
			<entry ageMin="11" ageMax="12" value="2588"/>
			<entry ageMin="12" ageMax="13" value="2776"/>
			<entry ageMin="13" ageMax="14" value="2995"/>
			<entry ageMin="14" ageMax="15" value="3150"/>
			<entry ageMin="15" ageMax="16" value="3263"/>
			<entry ageMin="16" ageMax="17" value="3322"/>
			<entry ageMin="17" ageMax="18" value="3361"/>
			<entry ageMin="18" ageMax="30" value="3600"/>
			<entry ageMin="30" ageMax="60" value="3425"/>
			<entry ageMin="60" ageMax="1000" value="2987"/>
		</caloriesTable>
	</hunterGatherers>
	<agroPastoralists num="0" 
		maxCropHomeDistance="10">	
		<caloriesTable>
			<entry ageMin="0" ageMax="1" value="625"/>
			<entry ageMin="1" ageMax="2" value="903"/>
			<entry ageMin="2" ageMax="3" value="1093"/>
			<entry ageMin="3" ageMax="4" value="1208"/>
			<entry ageMin="4" ageMax="5" value="1302"/>
			<entry ageMin="5" ageMax="6" value="1397"/>
